<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardView.Light.margin_8dp">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="CardView.Light.margin_10dp">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="CardView.Light.margin_16dp">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="CardView.Dark.margin_8dp">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="CardView.Trans">
        <item name="cardBackgroundColor">@color/transparent</item>
    </style>

    <style name="CardView.Trans.margin_8dp">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="sdv_cover">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@color/black_trans26</item>
        <item name="placeholderImage">@drawable/ic_def_large</item>
        <item name="placeholderImageScaleType">centerCrop</item>
    </style>

    <style name="sdv_cover.CornerRadius">
        <item name="roundedCornerRadius">2dp</item>
    </style>

    <style name="sdv_cover.CornerRadius.Top">
        <item name="roundBottomLeft">false</item>
        <item name="roundBottomRight">false</item>
    </style>

    <style name="sdv_cover.CornerRadius.Bottom">
        <item name="roundTopLeft">false</item>
        <item name="roundTopRight">false</item>
    </style>

    <style name="Line">

    </style>

    <style name="Line.Light">
        <item name="android:background">@color/white_trans26</item>
    </style>

    <style name="Line.Dark">
        <item name="android:background">@color/black_trans26</item>
    </style>

    <style name="Line.Black15">
        <item name="android:background">@color/black_trans15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Line.Light.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Line.Light.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Line.Dark.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Line.Dark.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Widget.AppCompat.RatingBar.Joy">
        <item name="android:progressDrawable">@drawable/src_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/src_ratingbar</item>
    </style>

    <!--设置界面的线性布局-->
    <style name="setting_div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/ripple_material_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--设置界面的icon-->
    <style name="setting_icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <!--设置界面的文本内容-->
    <style name="setting_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!--设置界面的右箭头-->
    <style name="setting_noun">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/ic_setting_noun</item>
    </style>

    <!-- 长段说明文字 -->
    <style name="LongText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="LongText.Dark">
        <item name="android:textColor">@color/black_trans87</item>
    </style>

    <style name="LongText.Light">
        <item name="android:textColor">@color/black_trans54</item>
    </style>

    <style name="Base.Widget.AppCompat.ProgressBar.Horizontal.Scores">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateDrawable">@drawable/layer_poi_comment_score</item>
        <item name="android:progressDrawable">@drawable/layer_poi_comment_score</item>
        <item name="android:maxHeight">5dp</item>
        <item name="android:minHeight">5dp</item>
    </style>

    <!-- 可折叠TextView-->
    <declare-styleable name="FoldTextView">
        <attr name="unfolded" format="boolean" />
        <attr name="minLines" format="integer" />
        <attr name="promptText" format="string" />
        <attr name="promptColor" format="color" />
        <attr name="promptCollapseText" format="string" />
    </declare-styleable>

    <!-- 日期选择的星期几样式-->
    <style name="day_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_trans87</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="share_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">80dp</item>
    </style>

</resources>