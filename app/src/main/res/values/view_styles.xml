<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardView.Light.margin_8dp">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="CardView.Dark.margin_8dp">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="CardView.Light.margin_16dp">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="CardView.Dark.margin_16dp">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Line"></style>

    <style name="Line.Light">
        <item name="android:background">@color/white_trans12</item>
    </style>

    <style name="Line.Dark">
        <item name="android:background">@color/black_trans12</item>
    </style>

    <style name="Line.Light.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Line.Light.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Line.Dark.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Line.Dark.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Widget.AppCompat.RatingBar.Joy">
        <item name="android:progressDrawable">@drawable/src_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/src_ratingbar</item>
    </style>

    <!--设置界面的线性布局-->
    <style name="setting_div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/ripple_material_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--设置界面的icon-->
    <style name="setting_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <!--设置界面的文本内容-->
    <style name="setting_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!--设置界面的右剪头-->
    <style name="setting_noun">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/ic_setting_noun</item>
    </style>

    <!-- 长段说明文字 -->
    <style name="LongText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="LongText.Dark">
        <item name="android:textColor">@color/black_trans87</item>
    </style>
    <style name="LongText.Light">
        <item name="android:textColor">@color/black_trans54</item>
    </style>

</resources>